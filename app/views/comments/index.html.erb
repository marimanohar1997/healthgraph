<p id="notice"><%= notice %></p>
<h2 class="title-align"> Comments</h2>
<%= link_to 'New Comment', new_comment_path,:class =>"btn btn-primary back-button"  %>


<% if @comments.length > 0 %>
<div class="container">
  <div class="row">
    <% @comments.each do |comment| %>
    <div class="col-sm-6">
        <div class="card">
          <div class="card-header">
            <%= Post.find(comment.post_id).name %>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= comment.name %></p>
              <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
              <div style="float: right;">
                <%= link_to '', edit_comment_path(comment),:class =>"fa fa-edit icon-view"%>
                <%= link_to '', comment, method: :soft_delete,  :class =>"fa fa-trash icon-view",data: { confirm: 'Are you sure want to destroy?' } %>
              <%= link_to '', comment,:class =>"fa fa-trash icon-view", :style =>"color:red;", method: :delete, data: { confirm: 'Are you sure want to permanently delete?' } %>
              </div>
            </blockquote>
          </div>
        </div>
        <br>
      </div>
      <% end %>
  </div>
</div>
<% else %>
<div class="container">
<p class="no-data">No Comments found</p>
</div>
<% end %>
